.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #F8F8F8;
} 
.deadLabel{
  background-color: rgb(182, 181, 181);
  color: black;
  border-radius: 10000px;
  padding: 2px 4px;
  font-size: 10px;
  margin-left: .8rem;
  letter-spacing: 0;
  top: -2px;
}
.icon{
  height: 1rem;
  width: 1rem;
}
.infoIcon{
  margin-right: .8rem;
}
.infoRow{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15px;
}
