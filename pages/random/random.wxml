<!--pages/random/random.wxml-->

<view class="container">
  <view class="catImgContainer">
  <image src="{{ImgSrc}}" class="centerImg" bindtap="navigateToCat" mode="aspectFill"></image>
  </view>
<view class="circleContainer">
<image wx:if="{{hide==0}}" class="hideImg" src="/img/hide.png"></image>
<image wx:else class="noHideImg" src="/img/noHide.png"></image>
<view class="circle">
<image class="saveImg" src="/img/saveImg.png" bindtap="saveImg"></image>
<image class="changeCatImg" src="/img/changeCatImg.png" bindtap="changeCatImg" ></image>
</view>
</view>
</view>