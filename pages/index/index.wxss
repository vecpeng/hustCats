/* tab Index*/
.container{
  background-color:#f9f5ef;
  width: 100%;
  height: 100%;
  margin:0;
  padding:0rpx;
}
Page{
  background-color:#f9f5ef;
  width: 100%;
  height: 100%;
}
.topbar{
  width:100%;
  margin:0;
  padding:0;
  
  background-color: #f9f5ef;
  z-index: 1000;
}
.searchLabel{
  line-height: 50rpx;
  margin: 15rpx 30rpx 0 20rpx;
  height: 40rpx;
  width: 40rpx;
}

.searchInput{
  height: 50rpx;
  min-height: 50rpx;
  border-radius: 5px;
  display: inline-block;
}
.searchPlaceholder{
  font-size: 10px;
}

.filterIcon{
  display: inline-block;
  width: 15%;
  text-align: center;
}
.filterImg{
  margin-left: auto;
  margin-right: auto;
  color: #ffffff;
  line-height: 50rpx;
  height: 40rpx;
  width: 40rpx;
}


.body{
  margin-top: 10rpx;
  margin-bottom: 8vh;
}
.catsInfo{
  margin: 20px 0;
}
.catInfo{
  width: 500rpx;
  margin: .5rem auto .5rem auto;
 
}
.cat{
  width: 620rpx;
  margin: 0 auto 0 auto;
  border-radius: 3%;
  box-shadow: darkgrey 0px 0px 5px 2px;
  background-color: #ffffff;
  padding-bottom: 1px;
}
.catImg{
  border-top-left-radius: 3%;
  border-top-right-radius: 3%;
  width: 620rpx;
  height: 400rpx;
}
.catImgUploader{
  width: 100%;
  display: inline-block;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  background: rgba(0 , 0, 0, 0.5);
  color: rgba(255, 255, 255, 0.8);
  position: relative;
  top: -28px;
}
.name{
  flex: 2.8;
  letter-spacing: .2rem;
}
.fish{
  flex: 1.2;
  font-size: 0.8rem;
}
.info{
  font-size: 0.5rem;
}

.dead1{
  filter: grayscale(1);
}

.model{
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 500;
  height: 100vh;
  width: 100vw;
  position: absolute;
}
.filter{
  background-color: #f9f5ef;
}
.filterNav{
  width: 25vw;
  display: inline-block;
  position: relative;
  height: 25vh;
}
.navOption{
  display: block;
  margin: 30rpx 40rpx 20rpx 20rpx;
  padding: 5rpx 20rpx;
  border-radius: 1000000px;
  font-size: 25rpx;
}
.chosen{
  background-color: orange;
}
.chosen::after{
  content: ' >';
}
.filterList{
  width: 75vw;
  display: inline-block;
  height: 25vh;
}
.filterOption{  
  display: inline-block;
  margin: 30rpx 40rpx 20rpx 20rpx;
  padding: 5rpx 20rpx;
  border-radius: 1000000px;
  font-size: 25rpx;
  border: 2px solid transparent;
}
.filterChosen{
  border: 2px solid orange;
}
.btns{
  padding-bottom: -10rpx;
}
.btnReset{
  display: inline-block;
  width: calc(50vw - 2px);
  text-align: center;
  border: 1px solid gray;
  padding: 20rpx 0 20rpx 0;
}
.btnDone{
  display: inline-block;
  width: calc(50vw - 2px);
  text-align: center;
  border: 1px solid gray;
  padding: 20rpx 0 20rpx 0;
  color: orange;
}


.tabItem{
  width: 33%;
  display: inline-block;
}

.info{
  font-size: 0.5rem;
  display:inline-block;
 

}

.infoRow{
  display:inline-block;
  margin:12rpx;
}


